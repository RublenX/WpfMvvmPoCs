<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMvvmNet6.Views"
        xmlns:ViewModels="clr-namespace:WpfMvvmNet6.ViewModels" x:Class="WpfMvvmNet6.Views.SegunderoWindow"
        mc:Ignorable="d"
        Title="SegunderoWindow" Height="450" Width="800">
    <Window.DataContext>
        <ViewModels:SegunderoViewModel/>
    </Window.DataContext>
    <Grid>
        <Label x:Name="lblTitulo" Content="Segundo actual: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblSegundero" Content="{Binding Segundos}" HorizontalAlignment="Left" Margin="113,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.589,0.537"/>

    </Grid>
</Window>
