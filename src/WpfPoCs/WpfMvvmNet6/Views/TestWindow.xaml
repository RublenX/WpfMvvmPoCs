<Window x:Class="WpfMvvmNet6.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMvvmNet6.Views"
        xmlns:ViewModels="clr-namespace:WpfMvvmNet6.ViewModels"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Window.DataContext>
        <ViewModels:TestViewModel/>
    </Window.DataContext>
    <Grid>
        <Label x:Name="lblNombre" Content="{Binding Nombre}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnCerrar" Content="Cerrar" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Command="{Binding CloseCommand, Mode=OneWay}"/>
    </Grid>
</Window>
